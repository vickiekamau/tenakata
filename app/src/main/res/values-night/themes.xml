<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TenakataPredictor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/backColor</item>
        <item name="colorAccent">@color/accent</item>
    </style>
        <!-- Customize your theme here. -->

        <style name="Login_Form" parent="Theme.MaterialComponents.Light.Bridge">
            <item name="colorPrimary">@color/accent</item>
            <item name="colorPrimaryDark">@color/backColor</item>
            <item name="colorAccent">@color/accent</item>
        </style>
        <style name="del_btn">
            <item name="android:layout_margin">0dp</item>
            <item name="android:padding">@dimen/view_padding</item>
            <item name="android:background">@drawable/remove_btn_bg</item>
            <item name="android:drawableTint" tools:ignore="NewApi">@color/red_bgn</item>
            <item name="android:drawableEnd">@drawable/ic_delete_forever_black_24dp</item>
            <item name="android:text">Remove</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:textColor">@color/red_bgn</item>
            <item name="android:foreground">?selectableItemBackground</item>
        </style>


</resources>